@model AlphaGym.Models.Member

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Delete Member</h1>

   

    <div class="row justify-content-center">
        <div class="col-md-6">
          
            <hr />

            <dl class="row">
                <dt class="col-sm-4">Name:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="col-sm-4">Phone Number:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.PhoneNumber)</dd>

                <dt class="col-sm-4">Monthly Subscription:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.MonthlySubscription)</dd>

                <dt class="col-sm-4">Subscription Expiry Date:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.SubscriptionExpiryDate)</dd>
            </dl>

            <form asp-action="Delete" class="mt-3">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Delete</button> |
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </form>
        </div>
    </div>
</div>
