@model AlphaGym.Models.Member

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Member Details</h1>

    <div class="col-md-8 mx-auto">
        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th>Name</th>
                    <th>Subscription Type</th>
                    <th>Phone Number</th>
                    <th>Monthly Subscription</th>
                    <th>Subscription Expiry Date</th>
                </tr>
                <tr>
                    <td>@Html.DisplayFor(model => model.Name)</td>
                    <td>@Html.DisplayFor(model => model.SubscriptionType)</td>
                    <td>@Html.DisplayFor(model => model.PhoneNumber)</td>
                    <td>@Html.DisplayFor(model => model.MonthlySubscription)</td>
                    <td>@Html.DisplayFor(model => model.SubscriptionExpiryDate)</td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="mt-3 text-center">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Edit</a> |
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
