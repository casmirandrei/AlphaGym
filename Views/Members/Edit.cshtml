@model AlphaGym.Models.Member

@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Edit Member</h1>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Edit" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Name:</label>
                    <input asp-for="Name" class="form-control" required />
                    <div class="invalid-feedback">@Html.ValidationMessageFor(model => model.Name)</div>
                </div>

                <div class="mb-3">
                    <label asp-for="PhoneNumber" class="form-label">Phone Number:</label>
                    <input asp-for="PhoneNumber" class="form-control" required />
                    <div class="invalid-feedback">@Html.ValidationMessageFor(model => model.PhoneNumber)</div>
                </div>

                <div class="mb-3">
                    <label asp-for="MonthlySubscription" class="form-label">Monthly Subscription:</label>
                    <input asp-for="MonthlySubscription" class="form-control" required />
                    <div class="invalid-feedback">@Html.ValidationMessageFor(model => model.MonthlySubscription)</div>
                </div>

                <div class="mb-3">
                    <label asp-for="SubscriptionExpiryDate" class="form-label">Subscription Expiry Date:</label>
                    <input asp-for="SubscriptionExpiryDate" class="form-control" type="date" id="subscriptionExpiryDate" required />
                    <div class="invalid-feedback">@Html.ValidationMessageFor(model => model.SubscriptionExpiryDate)</div>
                </div>

                <div class="text-center ">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>

    <div class="text-center mt-3">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#subscriptionExpiryDate').on('change', function () {
                var newExpiryDate = $(this).val();
                // Update Subscription Expiry Date in Create view
                $('#subscriptionExpiryDateCreate').val(newExpiryDate);
            });
        });
    </script>
}
